<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition="'$(GlobalTool)' != true">
    <TargetFrameworks>netcoreapp2.1;net45;netcoreapp2.2</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GlobalTool)' == true">
    <PackAsTool>true</PackAsTool>
    <TargetFrameworks>netcoreapp2.1;netcoreapp2.2</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
  </PropertyGroup>
  
</Project>
